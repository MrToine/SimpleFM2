<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Administration</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/admin.min.css') }}" />
</head>
<body>
    <h1>Administration</h1>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            {% if flash('success') %}
                <div class="alert alert-success">
                    {{ flash('success') }}
                </div>
            {% endif %}
            {% if flash('error') %}
                <div class="alert alert-danger">
                    {{ flash('error') }}
                </div>
            {% endif %}
            {% block body %}{% endblock %}
        </div>
        <div class="col-2"></div>
    </div>
</body>
</html>